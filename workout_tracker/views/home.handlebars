<h1>Workout Tracker</h1>

<form id="addExercise">
	Exercise:	
	<input type="text" name="exercise" id="exercise"><br>
	Reps:	
	<input type="number" name="reps" id="reps "min="1" max="10000"><br>
	Weight:	
	<input type="number" name="weight" id="weight "min="1" max="10000"><br>
	Units: Check kg for weight in kilograms, or leave box unchecked for lbs.	
	<input type="checkbox" name="measurement" id="measurement"><br>
	Date:	
	<input type="date" name="date" id="date"><br>
	<input type="submit" name="Add Item" value="Add Item" id="inputUsrData">
</form>
<br>

<h2>Your Workouts</h2>

<table id="makeTable">
	<tr>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>lbs/kg</th>
		<th>Date</th>
		<th>Update</th>
		<th>Delete</th>
	</tr>
	{{#if results}}
		{{#each results}}
			<tr>
				<td>{{this.name}}</td>
				<td>{{this.reps}}</td>
				<td>{{this.weight}}</td>
				<td>{{this.lbs}}</td>
				<td>{{this.date}}</td>
				<td>
					<a href="/update?id={{this.id}}"><input type="button" value="Update"></a>
			    </td>
				<td>
					<input type="button" name="delete" value="Delete" onClick="deleteRow('makeTable',{{this.id}})">
					<input type="hidden" id="delete{{this.id}}">
			    </td>
			</tr>
		{{/each}}
	{{/if}}
</table>
<script src="./script.js"></script>
<link rel="stylesheet" type="text/css" href="/style.css">
